import java.util.Scanner;
public class Lab01Task11_while
{
  public static void main (String [] args)
  {
    Scanner fr=new Scanner(System.in);
    int line=fr.nextInt();
    
    int linecount=1;
    while( linecount<=line)
    {
      int spacecount=1; 
      while(spacecount<=line-linecount)
      {
        System.out.print(" ");
        spacecount++;
      }
      int columncount=1;
      while( columncount<=2*linecount-1)
        if(columncount==1 || columncount==2*linecount-1 )
      {
        System.out.print("*");
        columncount++;
      }
      else
      {
        System.out.print(" ");
        columncount++;
      }
      System.out.println(); 
      linecount++ ;
    }
    while(linecount<line)
    {
      int spacecount;
      while(spacecount=1; spacecount<=linecount; spacecount++)
      {
        System.out.print(" ");
      }
      int columncount=1; 
      while(columncount<=2*line-(2*linecount+1))
        if(columncount==1 || columncount==2*line-(2*linecount+1))
      {
        System.out.print("*");
        columncount++;
      }
      else
      {
        System.out.print(" ");
        columncount++;
      }
      System.out.println();
      linecount++ ;
    }
  }
}
